---
interface Props {
	imgSrc: string
	imgAlt: string
	title: string
	content: string
	theme: 'dark' | 'light'
}
const { imgSrc, imgAlt, title, content, theme } = Astro.props
---

<div class={`feature ${theme}`}>
	<div class="image_container">
		<img src="/assets/car_logo.svg" alt={imgAlt} class="svg-icon" />
	</div>
	<div class="text_container">
		<h2>{title}</h2>
		<p>{content}</p>
	</div>
</div>

<style lang="scss">
	@use '@styles/variables/variables.scss' as variables;

	.feature {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 40px;
		padding: variables.$padding-large;
		border-radius: variables.$border-radius;
		overflow: hidden;
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;

		@include variables.shadow2;

		&.dark {
			background: variables.$secondary;
			color: variables.$white;

			.text_container h2,
			.text_container p {
				color: variables.$white;
			}
		}

		&.light {
			background: variables.$white;
			color: variables.$black;

			.text_container h2,
			.text_container p {
				color: variables.$black;
			}
		}

		.image_container {
			width: 50%;
			img {
				width: 100%;
				height: auto;
			}
			.svg-icon {
				fill: variables.$primary; // Change the color of the SVG
			}
		}

		.text_container {
			width: 60%;
			text-align: center;

			h2 {
				@include variables.typo-h1;
				font-family: variables.$font-family-anton;
			}

			p {
				@include variables.typo-body1;
			}
		}
	}
</style>

---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---
<div class="service_card">
    <div class="service_card_image">
      <img src={image} alt="circle1" />
    </div>
    <h1>{title}</h1>
    <p>
      {description}
    </p>
  </div>

  <style>
    .service_card {
  width: 300px;
  height: auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  box-shadow: var(--box-shadow-large);
  padding: var(--padding-medium);
  background-color: var(--color-white);
  border-radius: var(--border-radius);
}

.service_card p,
.service_card h1 {
  margin: 5px;
  text-align: center;
}

.service_card h1 {
  font-size: 20px;
  color: var(--color-black);
}

.service_card p {
  color: rgb(43, 43, 43);
}

.service_card_image {
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.service_card_image img {
  position: absolute;
  top: -50px;
}

.service_card:hover {
  box-shadow: var(--box-shadow-large-hover);
}
  </style>
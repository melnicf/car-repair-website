---
interface Props {
	title: string
	paragraph: string
	icon: string
}
const { title, paragraph, icon } = Astro.props as Props
---

<div class="main_div">
	<div class="second_div">
		<h1>
			{title}
		</h1>
		<div class="line_main_div">
			<div class="line"></div>
			<i class={icon}></i>
			<div class="line"></div>
		</div>
		<p>
			{paragraph}
		</p>
	</div>
</div>

<style scoped lang="scss">
	@use '@styles/variables/variables.scss' as variables;
	.main_div {
		width: 100%;
		height: auto;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 20px;
		padding-left: 50px;
		padding-right: 50px;

		p,
		h1 {
			text-align: center;
		}
	}

	.second_div {
		width: 100%;
		max-width: variables.$standard-width;
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 10px;
	}

	.line_main_div {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 20px;
		width: 100%;
		height: auto;
	}
	.line {
		width: 100%;
		height: 1px;
		background-color: #000;
	}
</style>

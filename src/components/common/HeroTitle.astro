---
interface Props {
	title: string
	span?: string
	paragraph: string
	icon: string
}
const { title, span, paragraph, icon } = Astro.props as Props
---

<div class="main_div">
	<div class="second_div">
		<h1>
			{title}
			<span>{span}</span>
		</h1>
		<div class="line_main_div">
			<div class="line"></div>
			<i class={icon}></i>
			<div class="line"></div>
		</div>
		<p>
			{paragraph}
		</p>
	</div>
</div>

<style scoped lang="scss">
	@use '@styles/variables/variables.scss' as variables;
	.main_div {
		width: 100%;
		height: 60vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 20px;
		margin-bottom: 80px;
		padding-left: 50px;
		padding-right: 50px;
		background-color: variables.$secondary;

		p {
			text-align: center;
			color: variables.$white;

			@include variables.typo-body1;
		}

		h1 {
			text-align: center;
			color: variables.$white;
			margin-bottom: 10px;
			font-family: variables.$font-family-anton;

			@include variables.typo-h1;
		}

		span {
			font-family: variables.$font-family-anton;
			color: variables.$primary;
		}
	}

	.second_div {
		width: 100%;
		height: auto;
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 20px;
	}

	.line_main_div {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 20px;
		width: 100%;
		height: auto;
	}

	.line {
		width: 100%;
		height: 2px;
		background-color: variables.$tertiary;
	}

	i {
		font-size: 2rem;
		color: variables.$primary;
	}
</style>

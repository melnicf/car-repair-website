<style lang="scss">
	@import '../styles/variables/variables';
	.about_hero {
		background: $background-color;
		padding: 80px 20px;
		text-align: center;

		.container {
			max-width: 700px;
			margin: 0 auto;
		}

		h1 {
			font-size: 3rem;
			margin-bottom: 20px;
			color: $color-black;
		}

		p {
			font-size: 1.1rem;
			margin-bottom: 30px;
			color: $color-black;
		}

		.buttons {
			display: flex;
			justify-content: center;
			gap: 15px;
		}
	}

	.about_features {
		padding: 80px 0;
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(10px);

		.container {
			max-width: 70%;
			margin: 0 auto;
			display: flex;
			flex-direction: column;
			gap: 50px;

			@media screen and (max-width: 800px) {
				max-width: 90%;
			}
		}

		.feature {
			position: relative;
			height: 450px;
			display: flex;
			align-items: center;
			text-align: center;
			padding: 30px;
			border-radius: $border-radius;
			box-shadow: $box-shadow-large;

			@media screen and (max-width: 1000px) {
				height: auto;
				padding: 20px;
			}

			.text_container {
				height: 60%;
				background: rgba(255, 255, 255, 0.8);
				backdrop-filter: blur(10px);
				text-align: left;
				border-radius: $border-radius;
				padding: 20px;
			}

			h2 {
				font-size: 2rem;
				margin-bottom: 15px;
				text-align: center;
				color: $color-black;
			}

			img {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				border-radius: $border-radius;
				z-index: -1;
			}

			p {
				font-size: 1rem;
				color: $color-black;
			}
		}
	}
</style>

---
import PageLayout from '@layouts/PageLayout.astro'
import Feature from '../components/about/AboutUsFeatureCard.astro'
import { aboutUs } from '../data/aboutUs.ts'
import HeroTitle from '@components/common/HeroTitle.astro'
---

<PageLayout>
	<HeroTitle title={aboutUs.title} paragraph={aboutUs.description} icon="fas fa-users" />
	<section class="about_features">
		<div class="container">
			{
				aboutUs.features.map((f) => (
					<Feature imgSrc={f.coverImage} imgAlt={f.title} title={f.title} content={f.description} />
				))
			}
		</div>
	</section>
	<section class="our_team">
		<h2>La nostra squadra</h2>
		<div class="team_container">
			{
				aboutUs.team.map((member) => (
					<div class="team_member">
						<img src={member.image} alt={member.name} />
						<div class="member_info">
							<h3>{member.name}</h3>
							<p>{member.position}</p>
						</div>
					</div>
				))
			}
		</div>
	</section>
</PageLayout>

<style lang="scss">
	@use '../styles/variables/variables.scss' as variables;

	.about_features {
		padding: 50px 0;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		display: flex;
		flex-direction: column;
		gap: 50px;
		padding: 0 20px;
	}

	.our_team {
		background-color: aliceblue;
		display: flex;
		flex-direction: column;
		gap: 30px;
		align-items: center;
		padding: 50px 20px;
		text-align: center;

		h2 {
			font-size: 2.5rem;
			margin-bottom: 30px;
			color: variables.$text-color;
		}

		.team_container {
			width: 80%;
			display: flex;
			flex-wrap: wrap;
			justify-content: space-around;
			gap: 30px;
		}

		.team_member {
			background: variables.$color-white;
			border-radius: variables.$border-radius;
			box-shadow: variables.$box-shadow-small;
			overflow: hidden;
			width: 250px;
			transition:
				transform 0.3s ease,
				box-shadow 0.3s ease;

			&:hover {
				transform: translateY(-10px);
				box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
			}

			img {
				width: 100%;
				height: 250px;
				object-fit: cover;
			}

			.member_info {
				padding: 20px;

				h3 {
					font-size: 1.5rem;
					color: variables.$text-color;
					margin-bottom: 10px;
				}

				p {
					font-size: 1rem;
				}
			}
		}
	}
</style>

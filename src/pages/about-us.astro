---
import PageLayout from '@layouts/PageLayout.astro'
import PrimaryButton from '../components/PrimaryButton.vue'
import Feature from '../components/AboutUsFeatureCard.astro'
import { aboutUs } from '../data/aboutUs.ts'
---

<PageLayout>
	<section class="about_hero">
		<div class="container">
			<h1>{aboutUs.title}</h1>
			<p>
				{aboutUs.description}
			</p>
			<div class="buttons">
				<PrimaryButton class="button_type_1" type="submit" label="Contattaci" href="/contact-us" />
			</div>
		</div>
	</section>

	<section class="about_features">
		<div class="container">
			{
				aboutUs.features.map((f) => (
					<Feature imgSrc={f.coverImage} imgAlt={f.title} title={f.title} content={f.description} />
				))
			}
		</div>
	</section>
</PageLayout>

<style lang="scss">
	@use '../styles/variables/variables';
	.about_hero {
		background: $background-color;
		padding: 80px 20px;
		text-align: center;

		.container {
			max-width: 700px;
			margin: 0 auto;
		}

		h1 {
			font-size: 3rem;
			margin-bottom: 20px;
			color: $color-black;
		}

		p {
			font-size: 1.1rem;
			margin-bottom: 30px;
			color: $color-black;
		}

		.buttons {
			display: flex;
			justify-content: center;
			gap: 15px;
		}
	}

	.about_features {
		padding: 80px 0;
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(10px);

		.container {
			max-width: 70%;
			margin: 0 auto;
			display: flex;
			flex-direction: column;
			gap: 50px;

			@media screen and (max-width: 800px) {
				max-width: 90%;
			}
		}
	}
</style>

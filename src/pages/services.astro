---
import Layout from '../layouts/PageLayout.astro'
import HeroTitle from '../components/common/HeroTitle.astro'
import { services } from '../data/services'
import ServicePageCards from '../components/services/ServicePageCard.astro'
---

<Layout>
	<HeroTitle title={services.title} paragraph={services.paragraph} icon="fas fa-tools" />
	{
		services.cards.map((ogg, i) => (
			<ServicePageCards
				title={ogg.title}
				description={ogg.description}
				image={ogg.image}
				index={i}
			/>
		))
	}
</Layout>

<style scoped lang="scss"></style>
